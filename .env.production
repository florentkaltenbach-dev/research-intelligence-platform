# Production Environment Configuration
# Copy this to .env and update with production values

# Database Configuration (Use managed PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Redis (for caching - highly recommended in production)
REDIS_URL=redis://your-redis-host:6379

# API Configuration
FRONTEND_URL=https://your-frontend-domain.com

# Security (Generate new secret key with: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=REPLACE_WITH_SECURE_RANDOM_KEY

# Application
DEBUG=False
ENVIRONMENT=production

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here
